{
  "version": 1,
  "disabled_existing_loggers": false,
  "formatters": {
    "verbose": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(levelname)-10s%(reset)s - %(asctime)s - %(module)-15s : %(message_log_color)s%(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S",
      "log_colors": {
        "DEBUG": "white",
        "INFO": "green",
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "bold_red,bg_white"
      },
      "secondary_log_colors": {
        "message": {
          "INFO": "white",
          "DEBUG": "white",
          "WARNING": "white",
          "ERROR": "white",
          "CRITICAL": "white"
        }
      }
    },
    "standard": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(levelname)-10s%(reset)s - %(name)-15s : %(message_log_color)s%(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S",
      "log_colors": {
        "DEBUG": "white",
        "INFO": "green",
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "bold_red,bg_white"
      },
      "secondary_log_colors": {
        "message": {
          "INFO": "white",
          "DEBUG": "white",
          "WARNING": "white",
          "ERROR": "white",
          "CRITICAL": "white"
        }
      }
    }
  },
  "handlers": {
    "console": {
      "level": "DEBUG",
      "class": "logging.StreamHandler",
      "formatter": "standard"
    },
    "console2": {
      "level": "DEBUG",
      "class": "logging.StreamHandler",
      "formatter": "standard"
    },
    "file": {
      "level": "DEBUG",
      "class": "logging.FileHandler",
      "filename": "logs.txt",
      "mode": "w",
      "formatter": "verbose"
    }
  },
  "loggers": {
    "phase1": {
      "handlers": [
        "console",
        "console2"
      ],
      "level": "INFO",
      "propagate": false
    },
    "phase2": {
      "handlers": [
        "console",
        "console2"
      ],
      "level": "INFO",
      "propagate": false
    },
    "phase3": {
      "handlers": [
        "console",
        "console2"
      ],
      "level": "INFO",
      "propagate": false
    },
    "error": {
      "handlers": [
        "file"
      ],
      "level": "WARNING",
      "propagate": false
    }
  }
}
